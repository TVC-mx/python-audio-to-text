# Configuración de MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=tu_password_aqui
MYSQL_DATABASE=llamadas

# URL base para descargar audios (solo si las URLs en la BD no son completas)
# Si tu campo audio_path ya contiene URLs completas, puedes dejar esto vacío
AUDIO_BASE_URL=http://tu-servidor.com/audios

# Modelo de Whisper a usar (tiny, base, small, medium, large)
# tiny: más rápido, menos preciso, más estable (recomendado para archivos problemáticos)
# base: balance entre velocidad y precisión
# small: mejor precisión, más lento
# medium: muy buena precisión, lento
# large: mejor precisión, muy lento
WHISPER_MODEL=medium

# Configuración de procesamiento paralelo
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_TRANSCRIPTIONS=2
