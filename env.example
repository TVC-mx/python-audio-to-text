# Configuración unificada para procesamiento de audio a texto
# Copia este archivo a .env y ajusta los valores según tu sistema

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=tu_password_aqui
MYSQL_DATABASE=llamadas

# =============================================================================
# CONFIGURACIÓN DE AUDIO
# =============================================================================
# URL base para descargar audios
AUDIO_BASE_URL=http://tu-servidor.com/audios

# =============================================================================
# CONFIGURACIÓN DE WHISPER
# =============================================================================
# Modelo de Whisper (tiny, base, small, medium, large)
# tiny: más rápido, menos preciso (recomendado para CPU)
# base: balance entre velocidad y precisión
# small: mejor precisión, más lento
# medium: alta precisión, muy lento
# large: máxima precisión, extremadamente lento
WHISPER_MODEL=tiny

# =============================================================================
# CONFIGURACIÓN DE PROCESAMIENTO
# =============================================================================
# Procesamiento paralelo
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_TRANSCRIPTIONS=2

# =============================================================================
# CONFIGURACIÓN OPTIMIZADA PARA CPU
# =============================================================================
# Habilitar optimización para CPU
CPU_OPTIMIZED=true
MAX_CPU_WORKERS=4
ENABLE_PARALLEL_DOWNLOADS=true
ENABLE_PARALLEL_TRANSCRIPTIONS=true

# =============================================================================
# CONFIGURACIÓN OPTIMIZADA PARA GPU
# =============================================================================
# Habilitar optimización para GPU
GPU_OPTIMIZED=false
CUDA_VISIBLE_DEVICES=0

# =============================================================================
# CONFIGURACIÓN DE MEMORIA
# =============================================================================
# Límite de memoria
MAX_MEMORY_USAGE=8G
# Procesar en chunks de N llamadas
CHUNK_SIZE=5

# =============================================================================
# CONFIGURACIÓN DE LIMPIEZA AUTOMÁTICA
# =============================================================================
# Habilitar limpieza automática de archivos
AUTO_CLEANUP=true
# Limpiar archivos de audio después del procesamiento
CLEANUP_AUDIO_FILES=true
# Limpiar archivos temporales
CLEANUP_TEMP_FILES=true
# Mantener archivos de transcripción
KEEP_TRANSCRIPTS=true
# Delay en segundos antes de limpiar (para debugging)
CLEANUP_DELAY=0

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO